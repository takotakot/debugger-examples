{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Vitest Tests",
            "program": "${workspaceFolder}/node_modules/vitest/vitest.mjs",
            "args": [
                "--run",
                "--inspect-brk",
                "--no-file-parallelism"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "cwd": "${workspaceFolder}"
        }
    ]
}
